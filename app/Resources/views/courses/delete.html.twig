{% extends "base.html.twig" %}
{% block main %}
    {% if app.user %}
        <div class="container body-content span=8 offset=2">
            <div class="well">
                <form class="form-horizontal" action="/courses/{{ course.id }}/delete" method="POST">
                    <fieldset>
                        <legend>New course</legend>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="course_name">Course name</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="course_name" placeholder="Course name"
                                       name="course[name]" value="{{ course.name }}"  disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="course_content">Course description</label>
                            <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="course_content_content"
                                  name="course[content]" disabled>{{ course.content }}</textarea>
                            </div>
                        </div>

                        {{ form_row(deleteForm._token) }}

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <a class="btn btn-warning" href="{{ path('courses') }}">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete</button>

                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    {% else %}
        <hr class="my-4">
        Your ar not loged in. Please <a href="{{ path('security_login') }}">loggin</a>!
        <hr class="my-4">
    {% endif %}
{% endblock %}
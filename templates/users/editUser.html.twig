{% extends 'base.html.twig' %}

{% block main %}
    {% if app.user.isAdmin  or app.user.id == user.id%}
        <div class="container body-content span=8 offset=2">
            <div class="well">
                {{ form_start(userForm, {'attr': {'class': 'form-horizontal'}}) }}
                    <fieldset>
                        <legend>Edit user</legend>

                        <div class="form-group">
                            {{ form_label(userForm.email, 'Email', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-4">
                                {{ form_widget(userForm.email, {'attr': {'class': 'form-control', 'placeholder': 'email'}}) }}
                                {{ form_errors(userForm.email) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(userForm.password, 'Password', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-4">
                                {{ form_widget(userForm.password, {'attr': {'class': 'form-control', 'placeholder': 'password'}}) }}
                                <small class="form-text text-muted">Оставете празно, ако не искате да променяте паролата</small>
                                {{ form_errors(userForm.password) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(userForm.fullName, 'Full Name', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-4">
                                {{ form_widget(userForm.fullName, {'attr': {'class': 'form-control', 'placeholder': 'User full name'}}) }}
                                {{ form_errors(userForm.fullName) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(userForm.city, 'City', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-4">
                                {{ form_widget(userForm.city, {'attr': {'class': 'form-control', 'placeholder': 'City'}}) }}
                                {{ form_errors(userForm.city) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(userForm.address, 'Address', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-4">
                                {{ form_widget(userForm.address, {'attr': {'class': 'form-control', 'placeholder': 'Address'}}) }}
                                {{ form_errors(userForm.address) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(userForm.phone, 'Phone', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-4">
                                {{ form_widget(userForm.phone, {'attr': {'class': 'form-control', 'placeholder': 'Phone'}}) }}
                                {{ form_errors(userForm.phone) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(userForm.birthday, 'Birthday', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                            <div class="col-sm-4">
                                {{ form_widget(userForm.birthday, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(userForm.birthday) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <a class="btn btn-danger" href="{{ path('users') }}">Cancel</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                {{ form_end(userForm) }}
            </div>
        </div>
    {% endif %}
{% endblock %}


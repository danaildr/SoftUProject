{% extends "base.html.twig" %}
{% block main %}
    {% if app.user %}
        <div class="container body-content span=8 offset=2">
            <div class="well">
                {% if errorMsg %}
                    <div class="alert alert-danger">{{ errorMsg }}</div>
                {% endif %}

                <div class="alert alert-warning">
                    <h4>Delete Confirmation</h4>
                    <p>Are you sure you want to delete this course? This action cannot be undone.</p>
                    <p><strong>Note:</strong> The course can only be deleted if there are no evaluations associated with it.</p>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Course Details</h3>
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Course Name:</label>
                            <div class="col-sm-4">
                                <p class="form-control-static">{{ course.name }}</p>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Description:</label>
                            <div class="col-sm-6">
                                <p class="form-control-static">{{ course.content }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_start(deleteForm, {'attr': {'class': 'form-horizontal'}}) }}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('courses') }}">Cancel</a>
                            {{ form_widget(deleteForm.delete) }}
                        </div>
                    </div>
                {{ form_end(deleteForm) }}
            </div>
        </div>
    {% else %}
        <hr class="my-4">
        You are not logged in. Please <a href="{{ path('security_login') }}">login</a>!
        <hr class="my-4">
    {% endif %}
{% endblock %}
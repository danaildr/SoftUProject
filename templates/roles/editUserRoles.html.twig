{% extends 'base.html.twig' %}

{% block title %}{{ 'additional.assign_role'|trans }}{% endblock %}

{% block main %}
    {% if app.user %}
        <div class="container mt-4">
            <h2>{{ 'additional.assign_role'|trans }} - {{ user.fullName }}</h2>
            <p class="text-muted">{{ 'label.email'|trans }}: {{ user.email }}</p>

            {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                <div class="mb-3">
                    {{ form_label(form.userRoles, 'label.select_roles'|trans, {'label_attr': {'class': 'form-label'}}) }}
                    <div class="form-check-container">
                        {{ form_widget(form.userRoles, {'attr': {'class': 'form-check-input'}}) }}
                    </div>
                    {{ form_errors(form.userRoles) }}
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">{{ 'button.save'|trans }} {{ 'table.roles'|trans }}</button>
                    <a href="{{ path('users') }}" class="btn btn-secondary">{{ 'button.cancel'|trans }}</a>
                </div>
            {{ form_end(form) }}
        </div>
    {% else %}
        <hr class="my-4">
        {{ 'status.not_logged_in'|trans }} <a href="{{ path('security_login') }}">{{ 'nav.login'|trans }}</a>!
        <hr class="my-4">
    {% endif %}
{% endblock %}

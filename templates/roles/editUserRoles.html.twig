{% extends 'base.html.twig' %}

{% block main %}
    {% if app.user %}
        <div class="container mt-4">
            <h2>Assign Roles to {{ user.fullName }}</h2>
            <p class="text-muted">Email: {{ user.email }}</p>
            
            {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                <div class="mb-3">
                    {{ form_label(form.userRoles, 'Select Roles:', {'label_attr': {'class': 'form-label'}}) }}
                    <div class="form-check-container">
                        {{ form_widget(form.userRoles, {'attr': {'class': 'form-check-input'}}) }}
                    </div>
                    {{ form_errors(form.userRoles) }}
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save Roles</button>
                    <a href="{{ path('users') }}" class="btn btn-secondary">Cancel</a>
                </div>
            {{ form_end(form) }}
        </div>
    {% else %}
        <hr class="my-4">
        You are not logged in. Please <a href="{{ path('security_login') }}">login</a>!
        <hr class="my-4">
    {% endif %}
{% endblock %}
